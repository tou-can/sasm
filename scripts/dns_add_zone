#!/bin/bash
if [ "$EUID" -ne 0 ]
then
  echo "Error: This script must be run as root."
  exit
fi

# Add your script logic here
#!/bin/bash
if [ "$EUID" -ne 0 ]; then
  echo "Error: This script must be run as root."
  exit
fi

if [ "$#" -ne 1 ]; then
  echo "Usage: $0 <zone_name>"
  exit
fi

zone_name="$1"
zone_file="/etc/bind/zones/db.${zone_name}"

# Check if the zone already exists
if [ -f "${zone_file}" ]; then
  echo "Error: Zone '${zone_name}' already exists."
  exit
fi

# Create the zone file
echo "\$TTL 604800
@       IN      SOA     ns.${zone_name}. admin.vic-menten.sasm.uclllabs.be. (
                             $(date +%Y%m%d%H%M) ; Serial
                             604800         ; Refresh
                             86400          ; Retry
                             2419200        ; Expire
                             604800 )       ; Negative Cache TTL

@       IN      NS      ns.${zone_name}.
@       IN      NS      ns1.uclllabs.be.
@       IN      NS      ns2.uclllabs.be.
@       IN      NS      ns.vic-menten.sasm.uclllabs.be." | sudo tee "${zone_file}" > /dev/null

# Notify the user
echo "Zone '${zone_name}' created successfully at '${zone_file}'."
